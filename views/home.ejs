<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Social Media Feed</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #000000;
      color: #ffffff;
    }

    /* Navbar Styling */
    /* Navbar Styling */
    header {
        background-color: #000000; /* Black background for the navbar */
        padding: 15px 0;
        position: fixed; /* Fix the navbar at the top */
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: center; /* Center the navbar content */
        align-items: center;
        z-index: 1000;
    }

    .navbar {
        display: flex;
        gap: 20px;
        font-size: 16px;
        justify-content: center; /* Center the navbar links */
        width: 100%;
    }

    .navbar a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 10px 20px;
        background-color: #333333;
        border-radius: 25px;
        transition: background-color 0.3s ease;
    }

    .navbar a:hover {
        background-color: #555555; /* Darker shade on hover */
    }


    /* New CSS for the centered button */
    .center-button-container {
      display: flex;
      justify-content: center;
      position: absolute;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      z-index: 10;
    }

    .center-button {
      background-color: #000000;
      color: white;
      padding: 15px 30px;
      font-size: 16px;
      font-weight: bold;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .center-button:hover {
      background-color: #333333;
    }

    .content {
      display: flex;
      justify-content: center;
      margin-top: 120px; /* Adjust content position to make space for navbar */
    }

    .feed {
      width: 600px;
      background-color: #222222;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    /* Post Compose Area */
    .post-compose {
      background-color: #333333;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
    }

    .post-compose textarea {
      width: 100%;
      padding: 10px;
      background-color: #444444;
      border: none;
      border-radius: 8px;
      color: #ffffff;
      resize: vertical;
      min-height: 100px;
      margin-bottom: 15px;
    }

    .post-compose button {
      background-color: #666666;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 14px;
      border-radius: 8px;
      cursor: pointer;
      margin-right: 10px;
    }

    .post-compose button:hover {
        background-color: #777777;
    }

    /* Post Styling */
    .post {
      margin-bottom: 20px;
      padding: 10px;
      background-color: #333333;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .post-header {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .post-header img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
    }

    .post-header span {
      font-weight: bold;
    }

    .post-content {
      margin-top: 10px;
      font-size: 16px;
      color: #ddd;
    }

    .post-footer {
      margin-top: 10px;
      display: flex;
      gap: 15px;
    }

    .post-footer button {
      background-color: transparent;
      border: none;
      color: #ffffff;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
    }

    .post-footer button:hover {
      text-decoration: underline;
    }

    .post-compose textarea {
        width: 100%;  /* Ensures it fills the container */
        max-width: 97%;  /* Limits the width to 100% of the container's size */
        padding: 10px;
        background-color: #444444;
        border: none;
        border-radius: 8px;
        color: #ffffff;
        resize: vertical;  /* Allows vertical resizing */
        min-height: 100px;
        margin-bottom: 15px;
    }

  </style>
</head>
<body>

  <!-- Centered Button at the Top -->
  <div class="center-button-container">
    <button class="center-button">Centered Button</button>
  </div>

  <!-- Header (Navbar) -->
  <header>
    <nav class="navbar">
      <a href="/home">Home</a>
      <a href="#">Explore</a>
      <a href="#">Messages</a>
      <a href="#">Notifications</a>
        <a href="#">Profile</a>
    </nav>
  </header>  

  <!-- Main Content -->
  <div class="content">
    <div class="feed">

      <!-- Post Compose Section (Text Area, Image Upload, Send Button) -->
      <div class="post-compose">
        <form action="/home" method="POST" enctype="multipart/form-data">
          <textarea placeholder="What's happening?" name="caption"></textarea>
          <div>
            <input type="file" name="image" style="display: inline-block; margin-right: 10px;" />
            <button type="submit">Post</button>
          </div>
        </form>
      </div>

      <!-- Post Section -->
      <% posts.forEach(post => { %>
        <div class="post">
          <div class="post-header">
            <!-- Check if Profile exists before rendering -->
            <% if (post.User.Profile) { %>
              <img src="<%= post.User.Profile.profilePicture || 'https://randomuser.me/api/portraits/men/5.jpg' %>" alt="<%= post.User.Profile.username %>">
              <span><%= post.User.Profile.username %></span> <!-- Display the username here -->
            <% } else { %>
              <!-- Fallback content if no profile exists -->
              <img src="https://randomuser.me/api/portraits/men/5.jpg" alt="Default User">
              <span>Unknown User</span>
            <% } %>
          </div>
          <div class="post-content">
            <%= post.caption %>
          </div>

          <% if (post.image) { %>
            <div class="post-image">
                <img src="<%= post.image %>" alt="Post Image" style="max-width: 100%; border-radius: 8px;">
            </div>
          <% } %>

          <div class="post-footer">
            <button>Like</button>
            <button>Comment</button>
            <button>Share</button>
          </div>
        </div>
      <% }) %>   

    </div>
  </div>

  <script>
    // Your existing JavaScript goes here
  </script>

</body>
</html>
